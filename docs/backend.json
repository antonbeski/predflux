{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time the user account was created."
        }
      },
      "required": ["email", "createdAt"]
    },
    "WatchlistItem": {
      "title": "Watchlist Item",
      "description": "Represents a stock in a user's watchlist.",
      "type": "object",
      "properties": {
        "symbol": {
          "type": "string",
          "description": "The stock ticker symbol."
        },
        "addedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time the stock was added to the watchlist."
        }
      },
      "required": ["symbol", "addedAt"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": {
            "$ref": "#/entities/UserProfile"
          },
          "description": "Stores public-facing profile information for a user."
        }
      },
      {
        "path": "/users/{userId}/watchlist/{symbol}",
        "definition": {
          "entityName": "WatchlistItem",
          "schema": {
            "$ref": "#/entities/WatchlistItem"
          },
          "description": "A user's personal watchlist of stocks. The document ID is the stock symbol."
        }
      }
    ]
  }
}
