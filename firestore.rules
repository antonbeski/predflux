rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Anyone can read a user's public profile
      allow get: if true;
      
      // Only the owner can create or update their own profile
      allow create, update: if isOwner(userId);
      
      // Deleting profiles is not allowed
      allow delete: if false;

      // Watchlist subcollection
      match /watchlist/{symbol} {
        // Only the owner can view, add, update, or remove items from their watchlist
        allow read, write: if isOwner(userId);
      }
    }
    
    // Fallback rule: Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
